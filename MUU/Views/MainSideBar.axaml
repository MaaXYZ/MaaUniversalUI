<UserControl
    x:Class="MUU.Views.MainSideBar"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:MUU.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="80"
    x:DataType="vm:MainWindowViewModel"
    mc:Ignorable="d">

	<Design.DataContext>
		<vm:MainWindowViewModel />
	</Design.DataContext>

	<Grid RowDefinitions="*,Auto">
		<!--  顶部按钮区域  -->
		<StackPanel
            Grid.Row="0"
            Margin="0,10,0,0"
            Spacing="10">
			<Button
                Width="80"
                Height="60"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding NavigateByName}"
                CommandParameter="Tasker">
				<StackPanel Orientation="Vertical" Spacing="5">
					<TextBlock FontSize="20" Text="📋" />
					<TextBlock FontSize="12" Text="任务" />
				</StackPanel>
			</Button>

			<Button
                Width="80"
                Height="60"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding NavigateByName}"
                CommandParameter="Connection">
				<StackPanel Orientation="Vertical" Spacing="5">
					<TextBlock FontSize="20" Text="📡" />
					<TextBlock FontSize="12" Text="连接" />
				</StackPanel>
			</Button>

			<Button
                Width="80"
                Height="60"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding NavigateByName}"
                CommandParameter="Configuration">
				<StackPanel Orientation="Vertical" Spacing="5">
					<TextBlock FontSize="20" Text="🛠️" />
					<TextBlock FontSize="12" Text="配置" />
				</StackPanel>
			</Button>
		</StackPanel>

		<!--  底部按钮区域  -->
		<StackPanel
            Grid.Row="1"
            Margin="0,0,0,20"
            VerticalAlignment="Bottom"
            Spacing="10">
			<Button
                Width="80"
                Height="60"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding NavigateByName}"
                CommandParameter="Help">
				<StackPanel Orientation="Vertical" Spacing="5">
					<TextBlock FontSize="20" Text="💭" />
					<TextBlock FontSize="12" Text="帮助" />
				</StackPanel>
			</Button>

			<Button
                Width="80"
                Height="60"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding NavigateByName}"
                CommandParameter="Settings">
				<StackPanel Orientation="Vertical" Spacing="5">
					<TextBlock FontSize="20" Text="⚙️" />
					<TextBlock FontSize="12" Text="设置" />
				</StackPanel>
			</Button>
		</StackPanel>
	</Grid>
</UserControl>